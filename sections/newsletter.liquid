<!-- newsletter.liquid -->
<style>
  .customstyle{{ section.id }} .form-group .form-control{
    border-bottom-color:{{section.settings.colorborder}};
  }
  .customstyle{{ section.id }} .icon-envelope{font-size: 60px;width: 60px;height: auto;}
</style>
<div class="customstyle{{ section.id }}" data-aos="{{section.settings.animation}}" >
  {%- include 'style-section' -%}
  <div class="{{ section.settings.setwidth }} text-center">
    <i class="icon-envelope text-body mb-4"></i>
    {%- include 'section-heading' -%}
    <div class="row d-flex justify-content-center">
      <div class="col-lg-8">

          <div class="form-vertical">
            {%- form 'customer' -%}
              {{ form.errors | default_errors }}
              {%- if form.posted_successfully? -%}
                <p class="form-success">{{ 'general.newsletter_form.confirmation' | t }}</p>
              {%- else -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <label for="NewsletterEmail-{{ block.id }}" class="label--hidden">{{ 'general.newsletter_form.newsletter_label' | t }}</label>
                <div class=" form-group text-center">
                  <input class="form-control mb-4" type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_placeholder' | t }}" name="contact[email]" id="NewsletterEmail-{{ block.id }}" autocorrect="off" autocapitalize="off">
                  <div>
                    <button type="submit" class="btn btn-underline" name="commit">
                      <span>{{ 'general.newsletter_form.submit' | t }}</span>
                    </button>
                  </div>
                </div>
              {%- endif -%}
            {%- endform -%}
          </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
